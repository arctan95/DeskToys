<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DeskToys.Core.Views.ShortcutHintWindow"
        SizeToContent="WidthAndHeight">
        
    <Grid>
        <Rectangle Fill="Black" Stretch="Fill" Opacity="0.5" RadiusX="5" RadiusY="5"/>                
        <Border Padding="5 " CornerRadius="5">
                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto">

                    <TextBlock Text="Double Control" Grid.Row="0" Grid.Column="0" 
                               Margin="10 5"
                               HorizontalAlignment="Left" Foreground="White" FontSize="14"/>
                    <TextBlock Text="Quick ask AI" Grid.Row="0" Grid.Column="1" 
                               Margin="10 5"
                               HorizontalAlignment="Left" Foreground="White" FontSize="14"/>
                    
                    <TextBlock Text="Double Alt" Grid.Row="1" Grid.Column="0" 
                               Margin="10 5"
                               HorizontalAlignment="Left" Foreground="White" FontSize="14"/>
                    <TextBlock Text="Toggle follow pointer" Grid.Row="1" Grid.Column="1" 
                               Margin="10 5"
                               HorizontalAlignment="Left" Foreground="White" FontSize="14"/>
                    
                    <TextBlock Text="Double Shift" Grid.Row="2" Grid.Column="0" 
                               Margin="10 5"
                               HorizontalAlignment="Left" Foreground="White" FontSize="14"/>
                    <TextBlock Text="Toggle click through" Grid.Row="2" Grid.Column="1" 
                               Margin="10 5"
                               HorizontalAlignment="Left" Foreground="White" FontSize="14"/>

                    <TextBlock Text="Escape" Grid.Row="3" Grid.Column="0" 
                               Margin="10 5"
                               HorizontalAlignment="Left" Foreground="White" FontSize="14"/>
                    <TextBlock Text="Hide main window" Grid.Row="3" Grid.Column="1" 
                               Margin="10 5"
                               HorizontalAlignment="Left" Foreground="White" FontSize="14"/>

                    <TextBlock Text="Ctrl+Alt+Arrows" Grid.Row="4" Grid.Column="0" 
                               Margin="10 5"
                               HorizontalAlignment="Left" Foreground="White" FontSize="14"/>
                    <TextBlock Text="Scroll content" Grid.Row="4" Grid.Column="1" 
                               Margin="10 5"
                               HorizontalAlignment="Left" Foreground="White" FontSize="14"/>
                </Grid>
        </Border>
    </Grid>
</Window>