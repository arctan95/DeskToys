<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels1="clr-namespace:DeskToys.Core.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="DeskToys.Core.Views.MainWindow"
        Title="DeskToys"
        x:DataType="viewModels1:MainWindowViewModel">
    
        <Canvas>
            <Image Source="{Binding ImageSource}" Stretch="Uniform" MaxWidth="400" MaxHeight="300" />
            
            <Grid
                Canvas.Left="{Binding MouseX}"
                Canvas.Top="{Binding MouseY}">
                <Rectangle Fill="Black" Stretch="Fill" Opacity="{Binding ChatBoxOpacity}" RadiusX="5" RadiusY="5"/>
                <Border BorderBrush="{Binding ChatBoxBorderColor}"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="5"
                        >
                    <StackPanel>
                        <ScrollViewer Offset="{Binding MarkdownScrollValue, Mode=TwoWay}"  MaxWidth="{Binding MaxChatBoxWidth}" MaxHeight="{Binding MaxChatBoxHeight}">
                            <TextBlock Text="{Binding MdText}"
                                       Foreground="White"
                                       IsVisible="{Binding IsChatBoxVisible}"
                                       TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </StackPanel>
            </Border>
            </Grid>
            
            <Grid Canvas.Left="10" 
                  Canvas.Bottom="10">
                <Rectangle Fill="Black" Stretch="Fill" Opacity="{Binding ChatBoxOpacity}" RadiusX="5" RadiusY="5"/>
                <Border Padding="5 " CornerRadius="5"
                >
                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto">

                    <TextBlock Text="Double Alt" Grid.Row="0" Grid.Column="0" 
                               Margin="10 5"
                               HorizontalAlignment="Left" Foreground="White" FontSize="14"/>
                    <TextBlock Text="Toggle follow pointer" Grid.Row="0" Grid.Column="1" 
                               Margin="10 5"
                               HorizontalAlignment="Left" Foreground="White" FontSize="14"/>

                    <TextBlock Text="Escape" Grid.Row="1" Grid.Column="0" 
                               Margin="10 5"
                               HorizontalAlignment="Left" Foreground="White" FontSize="14"/>
                    <TextBlock Text="Hide main window" Grid.Row="1" Grid.Column="1" 
                               Margin="10 5"
                               HorizontalAlignment="Left" Foreground="White" FontSize="14"/>

                    <TextBlock Text="Ctrl+Alt+Arrows" Grid.Row="2" Grid.Column="0" 
                               Margin="10 5"
                               HorizontalAlignment="Left" Foreground="White" FontSize="14"/>
                    <TextBlock Text="Scroll content" Grid.Row="2" Grid.Column="1" 
                               Margin="10 5"
                               HorizontalAlignment="Left" Foreground="White" FontSize="14"/>
                </Grid>
                </Border>
            </Grid>
        </Canvas>
</Window>
