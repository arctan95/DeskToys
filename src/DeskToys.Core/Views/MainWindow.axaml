<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DeskToys.Core.Views.MainWindow"
        Title="DeskToys"
        Width="800"
        Height="600">

    <ScrollViewer>
        <StackPanel Margin="20">
            
            <TextBlock Text="Welcome to DeskToys"
                       FontSize="32"
                       FontWeight="Bold"
                       Margin="0,0,0,30"/>

            <TextBlock Text="All Tools"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Margin="0,10"/>

            <Border Width="300"
                    Height="100"
                    Margin="0,10"
                    Background="#f5f5f5"
                    CornerRadius="12"
                    Padding="10"
                    Cursor="Hand"
                    HorizontalAlignment="Left"
                    PointerPressed="OnAIChatClicked"
                    >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ¤–"
                               FontSize="32"
                               VerticalAlignment="Center"
                               Margin="10,0"/>
                    
                    <StackPanel Margin="10,0">
                        <TextBlock Text="AI Chat"
                                   FontSize="18"
                                   FontWeight="Bold"/>
                        <TextBlock Text="Talk to an AI assistant"
                                   FontSize="12"
                                   Foreground="Gray"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Window>